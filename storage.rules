rules_version = '2';

// Firebase Storage Security Rules for MessageAI
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow authenticated users to upload photos to their chat folders
    match /photos/{chatId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.auth.uid != null
        && resource.size < 10 * 1024 * 1024; // Max 10MB per photo
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
